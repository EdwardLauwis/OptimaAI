<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:padding="16dp">

    <!-- Brain Icon in the Center -->
    <ImageView
        android:id="@+id/brain_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@drawable/brain"
        android:contentDescription="Brain Icon" />

    <com.example.optimaai.data.models.IdeaOrbitLayout
        android:id="@+id/idea_orbit_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>

    <!-- Floating Action Button to Add Idea -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddIdea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="Add Idea" />

    <!-- Input Container (Hidden by Default) -->
    <LinearLayout
        android:id="@+id/input_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:padding="16dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your idea">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/idea_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_submit_idea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/teal700" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel_idea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_marginStart="8dp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/red700" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>