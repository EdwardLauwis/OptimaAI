<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F8"
    tools:context=".BusinessConsultPage">

    <!-- 1. AppBarLayout dengan Toolbar untuk judul dan tombol back -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

<!--        <androidx.appcompat.widget.Toolbar-->
<!--            android:id="@+id/toolbar"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="?attr/actionBarSize"-->
<!--            android:background="@android:color/white"-->
<!--            app:navigationIcon="@drawable/ic_arrow_back"-->
<!--            app:title="Consult"-->
<!--            app:titleTextColor="#212121"/>-->

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#FFFFFF"
            app:title="@string/consult"
            app:titleTextColor="#212121"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appBarLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card untuk Input Prompt Pengguna -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Prompt"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:textSize="16sp"/>

                    <!-- ID ini tidak diubah -->
                    <EditText
                        android:id="@+id/promptEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter your prompt here..."
                        android:inputType="textMultiLine"
                        android:minHeight="120dp"
                        android:gravity="top"
                        android:background="@null"
                        android:layout_marginTop="8dp"
                        android:padding="4dp" />

                    <!-- TextView untuk Peringatan AI (BARU) -->
                    <TextView
                        android:id="@+id/promptWarningTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="#D32F2F"
                        android:visibility="gone"
                        tools:text="Peringatan: Prompt kurang spesifik."
                        tools:visibility="visible"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Judul untuk Saran Prompt -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prompt Suggestions"
                android:layout_marginTop="24dp"
                android:layout_marginStart="4dp"
                android:textStyle="bold"
                android:textColor="#212121"/>

            <!-- Card untuk Saran Prompt dengan "Read More" (MODIFIKASI) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:id="@+id/suggestionsTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:lineSpacingMultiplier="1.2"
                        android:text="@string/Prompt_Suggestions"
                        android:textColor="#424242"
                        android:maxLines="4"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/readMoreButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Read More"
                        android:textColor="?attr/colorPrimary"
                        android:textStyle="bold"
                        android:layout_gravity="end"
                        android:paddingTop="4dp"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Tombol Kirim (ID tidak diubah) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/sendPromptButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/send_prompt"
                android:layout_marginTop="24dp"
                app:cornerRadius="12dp"/>

            <!-- ProgressBar (ID tidak diubah) -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:visibility="gone" />

            <!-- Judul untuk Respon AI -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ai_response"
                android:layout_marginTop="24dp"
                android:layout_marginStart="4dp"
                android:textStyle="bold"
                android:textColor="#212121"/>

            <!-- Card untuk Respon AI (ID tidak diubah) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/responseText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Response will appear here..."
                    android:gravity="top"
                    android:minHeight="150dp"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:lineSpacingMultiplier="1.2"/>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
