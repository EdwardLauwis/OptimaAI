<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="24dp"
              android:background="@drawable/bottom_sheet_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atur Gaya Bahasa AI"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih gaya balasan yang paling sesuai untuk Anda."
        android:layout_marginBottom="24dp"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/toneChipGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipNormal"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normal"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipProfesional"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Professional"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipRamah"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friendly &amp; Casual"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipKreatif"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Creative &amp; Inspirational"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAnalitis"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Analytics &amp; Data"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipMentor"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decisive Business Mentor"/>


        <com.google.android.material.chip.Chip
            android:id="@+id/chipFriendInArms"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confidential Friend in arms"/>

    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/customToneEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Custom tone..."
            android:enabled="true"/>
    </com.google.android.material.textfield.TextInputLayout>



    <Button
        android:backgroundTint="?attr/colorPrimary"
        android:id="@+id/applyToneButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/done"
        android:layout_marginTop="24dp"/>

</LinearLayout>
